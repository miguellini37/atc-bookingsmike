# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (MySQL)
# For local development:
DATABASE_URL="mysql://user:password@localhost:3306/atc_bookings"

# For Railway deployment, this is automatically provided by the MySQL plugin

# Authentication
SECRET_KEY=your-secret-key-for-cookie-auth

# CORS Configuration
# In development, set to your frontend dev server
CORS_ORIGIN=http://localhost:5173

# In production (Railway), leave empty - backend serves frontend
# CORS_ORIGIN=

# Logging
LOG_LEVEL=info
